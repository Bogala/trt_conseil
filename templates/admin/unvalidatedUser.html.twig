{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste des utilisateurs en attente de validation</h1>

    {% if users is empty %}
        <p>Aucun utilisateur en attente de validation.</p>
    {% else %}
        <ul>
            {% for user in users %}
                <li>
                    {{ user.email }}
                    <a href="{{ path('app_unvalidated_user', {'id': user.id}) }}">Valider</a>
                </li>
            {% endfor %}
        </ul>
    {% endif %}
{% endblock %}